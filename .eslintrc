{
  "extends": "airbnb",
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
    "react/jsx-quotes": 0,
    "jsx-quotes": [2, "prefer-single"],
    "react/jsx-curly-spacing": [2, "never"],
    "react/jsx-uses-react": 2,
    "no-reserved-keys": 0,
    "new-cap": [2, {"capIsNewExceptions": ["Immutable.List", "Immutable.Map"]}],
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "comma-dangle": [2, "never"],
    "space-after-keywords": 0,
    "space-before-blocks": 2,
    "react/prop-types": 0,
    "react/sort-comp": 0,
    "no-use-before-define": 0,
    "padded-blocks": 0,
    "indent": [2, 2, {"SwitchCase": 1}],
    "no-shadow": 0,
    "id-length": [2, {
      "min": 3,
      "max": 30,
      "properties": "never",
      "exceptions": ["x", "y", "vx", "vy", "id", "i", "e", "fn", "to", "t"]
    }]
  },
  "plugins": [
    "react",
  ],
  "globals": {
    "__DEVELOPMENT__": true,
    "__DEVTOOLS__": true
  }
}
