@import './_vars'

@import 'http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,700italic,300,400,700'
@import 'bootstrap/dist/css/bootstrap.css'
@import 'font-awesome/css/font-awesome.css'

body, html
  margin 0
  padding 1em
  font 14px/1.4 'Open Sans', sans-serif
  color #333
  background background-color

h1, h2, h3
  margin-top 0
  margin-bottom 0

.intro
  > div
    padding-left 0
    padding-right 0
  .intro__header
    font-size 54px
    letter-spacing -1pt
    padding-bottom 10px
    font-weight 200
    border-bottom 1px solid intro-highlight-color
  .intro__header-name
    font-weight bold
    color intro-highlight-color
    &:before
      content " "
  .intro__title
    color intro-title-color
    font-size 20px
    text-align left
    margin-top 10px
    margin-bottom 15px

.profile-pic
  border 4px solid intro-highlight-color
  margin 0 auto
  text-align center
  border-radius 100%
  -moz-border-radius 100%
  -webkit-border-radius 100%
  overflow hidden
  width 210px
  height 210px
  img
    margin-top 8px
    width 188px
    height 188px
    border-radius 100%
    -moz-border-radius 100%
    -webkit-border-radius 100%

.timeline__wrap
  position relative
  top 0px

.timeline__item, .timeline__space
  padding 10px 0

.timeline__title
  background  url('../pics/section.png') no-repeat center center

.timeline__progress
  background  url('../pics/timeline.png') repeat-y center center

.timeline__end
  background  url('../pics/end.png') no-repeat center center
  height 100px

.section__title
  color section-title-color
  text-transform uppercase
  font-weight 700
  font-size 40px
  line-height 40px

.section__item-title
  color item-title-color
  text-transform uppercase
  font-weight 700
  font-size 20px
  padding-bottom 5px
  margin-bottom 10px
  border-bottom 1px solid item-title-border-color

.section__item-subtitle
  color item-subtitle-color
  font-size 14px
  font-weight bold
  margin-top 10px
  margin-bottom 10px
  .fa + span:before
    content " "

.section__item-subtitle-time
  font-size 14px
  font-style italic
  font-weight 200
  &:before
    content " - "

.section__item-content
  font-size 14px
  margin 0 0 10px

.section__item-keywords
  margin-top 30px
  color item-keywords-color

.section__button-container
  margin-top 5px

.skills__list
  list-style-type none
  padding 0
  li
    font-weight bold
    margin-bottom 15px

.skills__desc
  font-weight normal
  &:before
    content ": "

.btn
  margin-right 3px
  height 30px
  line-height 30px
  padding-top 0
  color button-font-color
  &.btn-default
    background button-default-color
    border button-default-color

@media (max-width: 767px)
  .intro
    .intro__header
      font-size 40px
  .section__title
    font-size 30px

@media (max-width: 992px)
  .profile-pic
    margin-bottom 30px

@media (min-width: 992px)
  .timeline__wrap
    top -74px
  .timeline__margin
    height 100px
  section
    .row
      display -webkit-box
      display -webkit-flex
      display -ms-flexbox
      display flex

@media (min-width: 1200px)
  .timeline__wrap
    top -54px
